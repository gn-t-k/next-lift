{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": [
		"@tsconfig/strictest/tsconfig.json",
		"@tsconfig/create-react-app/tsconfig.json",
		"@tsconfig/next/tsconfig.json"
	],
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"target": "ES2017"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		".next/dev/types/**/*.ts",
		"**/*.mts"
	]
}
