  "dependencies": {
    "@configs/common": "workspace:*",
    "@praha/eslint-config-definer": "2.0.1",
    "@praha/vite-plugin-external": "1.0.0",
    "@tsconfig/node-lts": "22.0.2",
    "vite": "6.3.5",
    "vitest": "3.2.4"
  },
  "devDependencies": {
    "eslint": "9.30.0",
    "pkgroll": "2.13.1",
    "typescript": "5.8.3"
  }
